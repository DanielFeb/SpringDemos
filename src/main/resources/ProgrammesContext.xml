<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <beans>
        <!-- inject by constructor or property: value/ref -->
        <bean id="singerLee" class="indi.daniel.stageapp.beans.Singer">
            <constructor-arg name="name" value="Lee"/>
        </bean>
        <bean id="songProgramme" class="indi.daniel.stageapp.beans.SongProgramme">
            <property name="songName" value="Small Bird"/>
            <constructor-arg name="performer" ref="singerLee"/>
        </bean>


        <!-- inject by P namespace value/ref -->
        <!-- inject by SpEL -->
        <bean id="dancerXu" class="indi.daniel.stageapp.beans.Dancer"
        p:name="Xu"/>
        <bean id="danceProgramme" class="indi.daniel.stageapp.beans.DanceProgramme"
        p:performer-ref="dancerXu" p:danceName="#{'Swan'}" />

    </beans>
</beans>